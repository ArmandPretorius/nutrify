<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nutrify.Pages.SearchPage"
             BackgroundImage="bgImage.png">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" Padding="20">

            <Label Text="Nutrify" FontSize="64" TextColor="White" FontFamily="Open Sans"/>
            <Label Text="your food" FontSize="36" TextColor="White" Margin="0,-20,0,20"/>

            <Frame CornerRadius="100" BackgroundColor="#E4E4E4" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="5">
                <SearchBar Placeholder="Search for the food item" />
            </Frame>
            
            

            <Button Text="Search" CornerRadius="100" BackgroundColor="GreenYellow" TextColor="ForestGreen" Padding="5" Margin="0,20,0,0" WidthRequest="40"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>