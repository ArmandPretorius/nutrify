<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nutrify.Pages.SearchPage"
             BackgroundColor="#F2F2F2"
             NavigationPage.HasNavigationBar="False" Padding="0">
  
        <StackLayout
                HorizontalOptions="FillAndExpand" Padding="30" Margin="0,100,0,0">


        <Image Source="logoText" HorizontalOptions="StartAndExpand"/>
        <Label Text="your food" FontSize="36" TextColor="#30604A" Margin="0,-15,0,30"/>

        <Frame CornerRadius="200" BackgroundColor="#FFFFFF" HeightRequest="56" VerticalOptions="Center"  HorizontalOptions="FillAndExpand" Padding="5">
            <StackLayout Orientation="Horizontal">
                <Image Source="search" HorizontalOptions="Start" Margin="15,0,0,0"/>
                <Entry x:Name="searchInput" Placeholder="Search for the food item" FontSize="18" HorizontalOptions="FillAndExpand" Margin="0,5,0,0"/>
            </StackLayout>
          
            </Frame>

            <Button Text="Search" CornerRadius="200" HeightRequest="56" BackgroundColor="#6FAC2B" FontSize="24" TextColor="#F2F2F2" Padding="5" Margin="130,20,0,0" Clicked="SearchFood"></Button>

        </StackLayout>
    
</ContentPage>