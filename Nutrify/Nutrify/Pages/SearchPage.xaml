<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nutrify.Pages.SearchPage"
             BackgroundColor="#F2F2F2"
             NavigationPage.HasNavigationBar="False"
             Padding="0"
             >
  
        <StackLayout VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand">

            <Label Text="Nutrify" FontSize="64" TextColor="#30604A" FontFamily="Open Sans"/>
            <Label Text="your food" FontSize="36" TextColor="#30604A" Margin="0,-10,0,30"/>

            <Frame CornerRadius="200" BackgroundColor="#FFFFFF" VerticalOptions="CenterAndExpand" HeightRequest="56" HorizontalOptions="CenterAndExpand" Padding="5">
                <SearchBar x:Name="searchInput" Placeholder="Search for the food item" FontSize="18" />
            </Frame>

            <Button Text="Search" CornerRadius="200" HeightRequest="56" BackgroundColor="#6FAC2B" FontSize="24" TextColor="#F2F2F2" Padding="5" Margin="130,20,0,0" Clicked="SearchFood"></Button>

        </StackLayout>
    
</ContentPage>